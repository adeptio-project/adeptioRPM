GREEN='\033[0;32m'
NC='\033[0m'

price=$(curl -s curl https://api.adeptio.cc/api/v1/now?key=price | awk '{print $2}' | sed 's@"@@g' | sed 's@,@@g')

echo ""
echo "Current adeptio price on a market: ~ $price sat"
echo ""

